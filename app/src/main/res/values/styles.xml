<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundView</item>
        <item name="android:colorEdgeEffect">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimaryFont</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/gen_shin_gothic</item>
    </style>
    <style name="OverlayTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorOverlayBackground</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
